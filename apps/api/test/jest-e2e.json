{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "isolatedModules": true
    }]
  },
  "setupFilesAfterEnv": ["./jest-env-setup.js"],
  "globals": {
    "NODE_ENV": "test"
  },
  "testEnvironmentOptions": {
    "NODE_ENV": "test"
  }
}
